    "outDir": "./lib",
    "module": "ESNext",
    "target": "esnext",
    "lib": [
      "esnext"
    ],
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true
